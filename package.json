{
	"name": "workout-tracker-api",
	"version": "1.0.0",
	"description": "API for the workout tracker.",
	"author": "Jon Rubins <jonrubins@gmail.com>",
	"scripts": {
		"deploy": "./deploy.sh",
		"precommit": "lint-staged",
		"start": "yarn && yarn start:offline",
		"start:dev:db": "mongod --dbpath=db/data",
		"start:dev:server": "NODE_ENV=development nodemon boot",
		"start:offline": "concurrently -k -p \"name\" -n \"db,server\" -c \"red,magenta\" \"yarn start:dev:db\" \"yarn start:dev:server\"",
		"start:prod": "node boot"
	},
	"engines": {
		"node": "8.6.0",
		"npm": "5.3.0",
		"yarn": "1.3.2"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:jrubins/workout-tracker-api.git"
	},
	"license": "MIT",
	"lint-staged": {
		"*.{js,jsx}": [
			"prettier --write",
			"eslint --fix --cache --ext=.js,.jsx",
			"git add"
		]
	},
	"dependencies": {
		"bcrypt": "2.0.1",
		"body-parser": "1.18.2",
		"cors": "2.8.4",
		"express": "4.16.3",
		"express-jwt": "5.3.1",
		"helmet": "3.12.0",
		"jsonwebtoken": "8.2.1",
		"lodash": "4.17.5",
		"moment": "2.22.1",
		"mongoose": "5.0.11",
		"winston": "2.4.2"
	},
	"devDependencies": {
		"babel-eslint": "8.2.2",
		"concurrently": "3.5.1",
		"dotenv": "5.0.1",
		"eslint": "4.19.1",
		"husky": "0.14.3",
		"lint-staged": "7.0.4",
		"nodemon": "1.17.3",
		"prettier": "1.11.1"
	}
}
